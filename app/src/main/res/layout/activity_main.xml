<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:fontFamily="sans-serif-condensed"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:text="One day i will sucess.then i will buy super car and Home.One day i will sucess.then i will buy super car and Home.One day i will sucess.then i will buy super car and Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:text="Multi Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/colorMinus"
                android:layout_margin="5dp"
                android:background="@drawable/click_background"
                android:gravity="center"
                android:textSize="26sp"
                android:text="-"
                android:layout_width="40sp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/colorCount"
                android:background="@drawable/click_background"
                android:gravity="center"
                android:textSize="15sp"
                android:text="0"
                android:layout_width="40sp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/colorPlus"
                android:layout_margin="5dp"
                android:background="@drawable/click_background"
                android:gravity="center"
                android:textSize="26sp"
                android:text="+"
                android:layout_width="40sp"
                android:layout_height="40dp"/>



        </LinearLayout>
        <ImageView
            android:padding="5dp"
            android:layout_toLeftOf="@id/disable"
            android:src="@drawable/random"
            android:layout_margin="5dp"
            android:background="@drawable/click_background"
            android:layout_width="40sp"
            android:layout_height="40dp"/>
        <ImageView
            android:padding="5dp"
            android:id="@+id/disable"
            android:layout_alignParentRight="true"
            android:src="@drawable/disable_icon"
            android:layout_margin="5dp"
            android:background="@drawable/click_background"
            android:layout_width="40sp"
            android:layout_height="40dp"/>
    </RelativeLayout>




</LinearLayout>